{
  "name": "instalador",
  "version": "1.0.0",
  "description": "repositório para criar instalador para aplicações desktop em linux e windows, com dependência de banco de dados mongoDB",
  "main": "index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "pack": "build --dir",
    "start": "electron .",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagodevx/instalador.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/thiagodevx/instalador#readme",
  "devDependencies": {
    "electron-builder": "20.0"
  },
  "build": {
    "appId": "instaladorv1",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/ico.ico"
    }
  }
}
